@model  Tasks.Models.ProductViewModel
@using (Html.BeginForm("Save", "Home", FormMethod.Post, new { @class = "modal-form", id = "editForm"}))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">
                @if (Model == null)
                {
                    <span>Add Product</span>
                }
                else
                {
                    <span>Edit Product</span>
                }
            </h4>
        </div>
        <div class="modal-body">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="Code" class="col-md-4 control-label">Code</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Code)
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-md-4 control-label">Name</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group">
                    <label for="Price" class="col-md-4 control-label">Price</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>
                </div>
                <div class="form-group">
                    <label for="Barcode" class="col-md-4 control-label">Barcode</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Barcode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Barcode)
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default" data-dismiss="modal">Cancel</a>
            <input type="submit" class="btn btn-primary" value="Save Changes">
        </div>
    </div>
}
